<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExpandedFABFragment">

    <com.leinardi.android.speeddial.SpeedDialView
        android:id="@+id/expandedFAB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="@color/blue_purple"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:sdMainFabClosedSrc="@drawable/icon_add"
        app:sdMainFabClosedBackgroundColor="@color/blue_purple"
        app:sdMainFabOpenedBackgroundColor="@color/blue_purple"/>

</androidx.constraintlayout.widget.ConstraintLayout>